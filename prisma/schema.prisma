datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Companies {
  name String
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  city          String   @default("")        // Empty string as default for city
  country       String                       // Required field for country
  employeeIds   String[]                     // Array of employee IDs
  isEvaluation  Boolean  @default(false)     // Default value for evaluation flag
  websiteUrl    String                       // Required field for the website URL
}

model Customers {
  id              Int      @id @default(autoincrement()) // Assuming 'id' as a unique identifier
  companyId       String                                 // Foreign key or reference to the company (assuming a String type for Firebase's id format)
  createdAt       DateTime @default(now())               // Automatically sets the current timestamp
  updatedAt       DateTime @updatedAt
  email           String                                 // Email field, required
  name            String                                 // The name of the customer, required
  status          String                                 // The status of the customer, required
}

model Interactions {
  id                 Int      @id @default(autoincrement()) // Assuming 'id' as a unique identifier
  method             String                                 // The method of interaction (e.g., "call")
  relatedCustomerIds String[]                               // An array of related customer IDs (assuming they are strings)
}

model Notes {
  id                 Int      @id @default(autoincrement()) // Assuming 'id' as a unique identifier
  body               String                                 // The content of the note (e.g., "this is a message")
  relatedCustomerIds String[]                               // An array of related customer IDs (assuming they are strings)
}



